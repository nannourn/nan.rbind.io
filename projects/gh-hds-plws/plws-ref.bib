@article{hughes2003job,
  title = {The {{Indochinese}}--{{Sundaic}} Faunal Transition at the {{Isthmus}} of {{Kra}}: An Analysis of Resident Forest Bird Species Distributions},
  shorttitle = {The {{Indochinese}}--{{Sundaic}} Faunal Transition at the {{Isthmus}} of {{Kra}}},
  author = {Hughes, Jennifer B. and Round, Philip D. and Woodruff, David S.},
  year = {2003},
  month = apr,
  journal = {Journal of Biogeography},
  volume = {30},
  number = {4},
  pages = {569--580},
  issn = {0305-0270, 1365-2699},
  doi = {10.1046/j.1365-2699.2003.00847.x},
  urldate = {2024-05-24},
  abstract = {Abstract                            Aim{\enspace}               To establish the geographical position of the biogeographical transition between Indochinese and Sundaic faunas using distributional data for the best-documented taxon, the birds.                                         Methods{\enspace}               Distributional data of 544 resident forest and forest edge bird species of Thailand and the Thai--Malay peninsula were examined at 45 sites spanning 15{$^\circ$} of latitude from northern-most Thailand to the southern peninsular Malaysia. Sites were grouped into 23{$\quad$}degree or half-degree latitudinal zones and avifaunal similarity coefficients were calculated between each zone.                                         Results{\enspace}               A Mantel test revealed a significant transition between northern Indochinese and southern Sundaic (Indomalay) avifauna assemblages just north of the Isthmus of Kra (10{$^\circ$}30{$\prime~$}N). Northern and southern range limits of 152 species ({$>\quad$}269 species and subspecies combined) lie between 11{$^\circ$} and 13{$^\circ~$}N.                                         Main conclusions{\enspace}               This transition between zoogeographical subregions is not coincident with the widely recognized transition between floristic provinces which is traditionally placed 400--500{$\quad$}km further south at the Kangar--Pattani line, but is associated with a change from wet seasonal evergreen dipterocarp rain forest to mixed moist deciduous forest north of the Isthmus of Kra in the northern Thai--Malay peninsula. Climatological and ecological factors associated with the distribution of forest types today are reviewed and it is hypothesized that the avian transition tracks the northern phytogeographical boundary. Palaeogeographical factors, including hypothetical Neogene seaways, which may account for the historical development of both phytogeographical and avifaunal transitions are also described.},
  copyright = {http://onlinelibrary.wiley.com/termsAndConditions\#vor},
  langid = {english}
}

@article{ismail2017np,
  title = {Evaluating Realized Seed Dispersal across Fragmented Tropical Landscapes: A Two-Fold Approach Using Parentage Analysis and the Neighbourhood Model},
  shorttitle = {Evaluating Realized Seed Dispersal across Fragmented Tropical Landscapes},
  author = {Ismail, Sascha A. and Ghazoul, Jaboury and Ravikanth, Gudasalamani and Kushalappa, Cheppudira G. and Uma Shaanker, Ramanan and Kettle, Chris J.},
  year = {2017},
  journal = {New Phytologist},
  volume = {214},
  number = {3},
  pages = {1307--1316},
  issn = {1469-8137},
  doi = {10.1111/nph.14427},
  urldate = {2024-07-18},
  abstract = {Despite the importance of seed dispersal for survival of plant species in fragmented landscapes, data on seed dispersal at landscape scales remain sparse. Effective seed dispersal among fragments determines recolonization and plant species persistence in such landscapes. We present the first large-scale (216-km2) direct estimates of realized seed dispersal of a high-value timber tree (Dysoxylum malabaricum) across an agro-forest landscape in the Western Ghats, India. Based upon an exhaustive inventory of adult trees and a sample of 488 seedlings all genotyped at 10 microsatellite loci, we estimated realized seed dispersal using parentage analysis and the neighbourhood model. Our estimates found that most realized seed dispersal was within 200 m, which is insufficient to effectively bridge the distances between forest patches. We conclude that using mobility of putative animal dispersers can be misleading when estimating tropical tree species vulnerability to habitat fragmentation. This raises serious concerns about the potential of many tropical trees to recolonize isolated forest patches where high-value tree species have already been removed.},
  copyright = {{\copyright} 2017 The Authors. New Phytologist {\copyright} 2017 New Phytologist Trust},
  langid = {english},
  keywords = {Dysoxylum malabaricum,fragmentation,Ocyceros griseus (Malabar grey hornbill),realized seed dispersal,recolonization,recruitment,spatial isolation,Western Ghats},
  file = {/Volumes/DUALDRIVE/Zotero/storage/WFBFRLKW/Ismail et al. - 2017 - Evaluating realized seed dispersal across fragment.pdf;/Volumes/DUALDRIVE/Zotero/storage/B2IQERYW/nph.html}
}

